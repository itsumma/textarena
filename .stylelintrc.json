{
  "extends": "stylelint-config-standard-scss",
  "ignoreFiles": [
    "public/**",
    "**/*.ts"
  ],
  "rules": {
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": ["function", "if", "each", "include", "mixin"]
    }],
    "selector-type-no-unknown": null,
    "no-descending-specificity": null,
    "alpha-value-notation": null
  }
}
